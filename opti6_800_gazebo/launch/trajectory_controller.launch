<launch>
      <arg name="gripper" default="false"/>
      <rosparam file="$(find opti6_800_gazebo)/config/opti6_800_trajectory_control.yaml" command="load"/>

      <node  name="arm_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
            output="screen" ns="/opti6_800" args="arm_joint_controller"/>

      <node if="$(arg gripper)" name="gripper_controller_spawner"
            pkg="controller_manager"
            type="spawner"
            respawn="false"
            output="screen"
            ns="/opti6_800"
            args="gripper_controller"/>
</launch>
